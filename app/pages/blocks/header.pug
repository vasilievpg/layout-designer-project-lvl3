header
  .row
    .col
      .navbar.py-3.ps-2
        a.navbar-brand(href="#")
          svg(height='25' width='15')
            use(xlink:href='images/icons/sprite.svg#logo')
        ul#pills-tab.nav.nav-fill(role='tablist')
          li.nav-item.position-relative(role='presentation')
            #pills-contacts-tab.nav-link.active.text-white.d-flex.align-items-center(data-bs-toggle='pill' data-bs-target='#pills-contacts' type='button' role='tab' aria-controls='pills-contacts' aria-selected='true')
              svg(height='25' width='25').me-2
                use(xlink:href='images/icons/sprite.svg#people')
              a.nav-link-text.stretched-link(href="#contacts") 
                span.d-none.d-md-block Контакты
          li.nav-item.position-relative(role='presentation')
            #pills-messages-tab.nav-link.text-white.d-flex.align-items-center(data-bs-toggle='pill' data-bs-target='#pills-messages' type='button' role='tab' aria-controls='pills-messages' aria-selected='false')
              svg(height='25' width='25').me-2
                use(xlink:href='images/icons/sprite.svg#chat')
              a.nav-link-text.stretched-link(href="#chats") 
                span.d-none.d-md-block Сообщения
          li.nav-item.position-relative(role='presentation')
            #pills-profile-tab.nav-link.text-white.d-flex.align-items-center(data-bs-toggle='pill' data-bs-target='#pills-profile' type='button' role='tab' aria-controls='pills-profile' aria-selected='false')
              svg(height='25' width='25').me-2
                use(xlink:href='images/icons/sprite.svg#person')
              a.nav-link-text.stretched-link(href="#profile") 
                span.d-none.d-md-block Профиль
