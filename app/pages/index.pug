doctype html
html(lang='ru')
  head
    include blocks/meta
    title Started Page
  body.py-md-5.bg-gray.vh-100
    .container.bg-white.mb-5.h-100.overflow-hidden.rounded-md
      .row.h-100
        .col-12.col-md-5.h-100.border-gray.d-flex.flex-column-reverse.flex-md-column.border-end-md
          .row
            .col.bg-primary.text-white
              include blocks/header
          .row.pt-5.h-100
