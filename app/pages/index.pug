                  include blocks/contacts
                #pills-messages.tab-pane.fade(role='tabpanel' aria-labelledby='pills-messages-tab')
                  h2.h1.fw-bold.mt-5 Сообщения
                #pills-profile.tab-pane.fade(role='tabpanel' aria-labelledby='pills-profile-tab')
                  h2.h1.fw-bold.mt-5 Профиль
        .d-none.d-md-block.col-md-7.container-xxl
          include blocks/right-side

